    <script>
        // Initialize Vanta.js background
        VANTA.GLOBE({
            el: "#vanta-bg",
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: 200.00,
            minWidth: 200.00,
            scale: 1.00,
            scaleMobile: 1.00,
            color: 0x3b82f6,
            backgroundColor: 0x111827,
            size: 0.8
        });

        // Initialize feather icons
        feather.replace();

        // Update local times for sample airports
        function updateTimes() {
            const options = { timeZone: 'America/New_York', hour: '2-digit', minute: '2-digit' };
            document.getElementById('jfk-time').textContent = new Date().toLocaleTimeString('en-US', options);
            
            options.timeZone = 'America/Los_Angeles';
            document.getElementById('lax-time').textContent = new Date().toLocaleTimeString('en-US', options);
            
            options.timeZone = 'Europe/London';
            document.getElementById('lhr-time').textContent = new Date().toLocaleTimeString('en-US', options);
        }
        
        updateTimes();
        setInterval(updateTimes, 1000);
    </script>
